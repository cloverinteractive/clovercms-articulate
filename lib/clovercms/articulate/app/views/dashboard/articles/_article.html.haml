%fieldset
  = form_for [ :dashboard, article ], :validate => true do |f|
    = f.label :title
    = f.text_field :title

    = f.label :body
    = f.text_area :body, :class => 'wymeditor'

    = f.label :publish_date
    .grouped_selector= f.date_select :publish_date, :start_year => Time.now.year

    = f.label :published
    .publish_article= f.check_box :published,   :class => :published

    = f.submit :class => 'wymupdate'
